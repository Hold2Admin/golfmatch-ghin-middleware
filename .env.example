# Server Configuration
PORT=5001
NODE_ENV=development

# Database (Middleware Cache)
GHIN_CACHE_DB_SERVER=golfmatchserver.database.windows.net
GHIN_CACHE_DB_NAME=golfdb-ghin-cache
GHIN_CACHE_DB_USER=ghin-middleware-service
GHIN_CACHE_DB_PASSWORD=your-password-here

# Azure Key Vault
KEY_VAULT_URL=https://golfmatch-secrets.vault.azure.net

# Redis Cache (Azure Cache for Redis)
REDIS_HOST=golfmatch-cache.redis.cache.windows.net
REDIS_PASSWORD=your-redis-password-here
REDIS_PORT=6380
REDIS_TLS_ENABLED=true

# GHIN API (Placeholder - update when access granted)
GHIN_API_BASE_URL=https://api.ghin.com/v2
GHIN_API_KEY=your-ghin-api-key-here
GHIN_API_TIMEOUT_MS=10000

# Fore Play API Integration
FOREPLAY_API_BASE_URL=https://golfmatch-api.azurewebsites.net
FOREPLAY_API_KEY=your-foreplay-api-key-here

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MIN=100
RATE_LIMIT_REQUESTS_PER_DAY=5000
GHIN_API_MAX_RPS=20

# Caching TTLs (in seconds)
PLAYER_CACHE_TTL=86400
COURSE_CACHE_TTL=2592000
SEARCH_CACHE_TTL=3600

# Logging
LOG_LEVEL=info
AUDIT_LOG_RETENTION_DAYS=90

# Security
API_KEY_HASH_SECRET=your-secret-here
GHIN_MIDDLEWARE_SECRET=your-middleware-secret-here
